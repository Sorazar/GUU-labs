#include <iostream>

using namespace std;


double harmony(double first, double second) {
	return 2 / (1 / first + 1 / second);
}

void sort(double &first, double &second, double &third) {
	double tmp;

	for (int i = 0; i < 2; i++) {
		if (first > second) {
			tmp = first;
			first = second;
			second = tmp;
		}
		if (second > third) {
			tmp = second;
			second = third;
			third = tmp;
		}
	}
};


void main() {
	setlocale(LC_ALL, "Russian");

	double a, b, c;

	cout << "Пункт 1) \nВведите первое число" << endl;
	cin >> a;
	cout << "Введите второе число" << endl;
	cin >> b;

	cout << "Среднее гармоническое = " << harmony(a, b);
	cout << a << " " << b << endl;


	cout << "Пункт 2) \nВведите первое число" << endl;
	cin >> a;
	cout << "Введите второе число" << endl;
	cin >> b;
	cout << "Введите третье число" << endl;
	cin >> c;

	sort(a, b, c);

	cout << "Числа в порядке возрастания: " << a << " " << b << " " << c << endl;
	system("pause");
}
